@*
    Base email layout with UC Davis Weill branding.
    All child templates should set ViewBag.Title and ViewBag.BaseUrl.
*@
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <style type="text/css">
        @@media only screen and (max-width: 680px) {
            .email-container {
                width: 100% !important;
                max-width: 100% !important;
            }
            .email-wrapper {
                padding: 10px !important;
            }
            .email-content {
                padding: 15px !important;
            }
            .email-header {
                padding: 0 !important;
            }
            .data-table {
                font-size: 12px !important;
            }
            .data-table th,
            .data-table td {
                padding: 8px !important;
            }
        }
    </style>
</head>
<body style="margin: 0; padding: 0; font-family: Arial, Helvetica, sans-serif; font-size: 14px; color: #333333; background-color: #f8f9fa;">
    @* Wrapper table inherits body styles for clients that strip body tag *@
    <table cellpadding="0" cellspacing="0" border="0" width="100%" bgcolor="#f8f9fa" style="background-color: #f8f9fa; font-family: Arial, Helvetica, sans-serif; font-size: 14px; color: #333333;">
        <tr>
            <td class="email-wrapper" style="padding: 20px;" align="center">
                @* Use width attribute for Outlook, max-width for modern clients. Class for responsive override. *@
                <table class="email-container" cellpadding="0" cellspacing="0" border="0" width="650" bgcolor="#ffffff" style="background-color: #ffffff; border: 1px solid #dee2e6; max-width: 650px; width: 100%;">
                    @* UC Davis Weill Header Image *@
                    <tr>
                        <td class="email-header" style="padding: 0; line-height: 0; font-size: 0;">
                            @if (!string.IsNullOrWhiteSpace((string?)ViewBag.BaseUrl))
                            {
                                <img src="@(ViewBag.BaseUrl)/images/email/email-header-weill.jpg"
                                     alt="UC Davis Weill School of Veterinary Medicine"
                                     width="650"
                                     style="display: block; width: 100%; max-width: 650px; height: auto; border: 0;" />
                            }
                            else
                            {
                                <h1 style="margin: 0; padding: 16px 20px; color: #022851; font-size: 22px;">@ViewBag.Title</h1>
                            }
                        </td>
                    </tr>

                    @* Body Content *@
                    @RenderBody()
                </table>
            </td>
        </tr>
    </table>
</body>
</html>
