{
  "name": "viper2",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "dev:frontend": "cd VueApp && npm install && npm run watch",
    "dev:backend": "cd web && dotnet run --launch-profile https",
    "dev": "concurrently --names \"FRONTEND,BACKEND\" --prefix-colors \"cyan,magenta\" \"npm run dev:frontend\" \"npm run dev:backend\"",
    "fix:frontend": "cd VueApp && npm run lint:fix",
    "fix:backend": "cd web && dotnet format",
    "fix:staged": "lint-staged --config .lint-staged-fix.json",
    "lint:frontend": "cd VueApp && npm run lint && npm run type-check",
    "lint:backend": "cd web && dotnet format --verify-no-changes",
    "lint": "concurrently --names \"FRONTEND,BACKEND\" --prefix-colors \"cyan,magenta\" \"npm run lint:frontend\" \"npm run lint:backend\"",
    "lint:staged": "lint-staged",
    "prepare": "husky",
    "test:backend": "cd test && dotnet test"
  },
  "devDependencies": {
    "concurrently": "^9.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2"
  },
  "lint-staged": {
    "VueApp/**/*.{vue,js,jsx,ts,tsx}": [
      "node scripts/lint-staged-vue.js"
    ],
    "web/**/*.cs": [
      "dotnet format web --verify-no-changes --include"
    ]
  }
}
