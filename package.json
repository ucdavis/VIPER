{
    "name": "viper2",
    "version": "2.0.0",
    "private": true,
    "engines": {
        "node": ">=20"
    },
    "scripts": {
        "dev:backend": "npm run mailpit:start && cd web && dotnet watch run --launch-profile https",
        "dev:browser": "node scripts/launch-open-browser.js",
        "dev:frontend": "cd VueApp && npm install && npm run dev",
        "dev:frontend-build": "cd VueApp && npm install && npm run build",
        "dev:fullstack": "concurrently --names \"BACKEND,FRONTEND,BROWSER\" --prefix-colors \"blue,green,yellow\" \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:browser\"",
        "dev:stop": "node scripts/stop-dev-services.js",
        "mailpit:start": "node scripts/manage-mailpit.js start",
        "mailpit:stop": "node scripts/manage-mailpit.js stop",
        "mailpit:status": "node scripts/manage-mailpit.js status",
        "lint": "node scripts/lint-any.js",
        "lint:precommit": "lint-staged",
        "lint:staged": "cross-env LINT_BLOCK_ON_WARNINGS=true lint-staged",
        "prepare": "husky",
        "test": "concurrently --names \"BACKEND,FRONTEND\" --prefix-colors \"blue,green\" \"npm run test:backend\" \"npm run test:frontend\"",
        "test:backend": "cd test && dotnet test",
        "test:frontend": "cd VueApp && npm run test:run"
    },
    "devDependencies": {
        "@double-great/stylelint-a11y": "^3.0.4",
        "concurrently": "^9.0.1",
        "cross-env": "^10.0.0",
        "dotenv": "^17.2.1",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-html": "^8.1.3",
        "eslint-plugin-security": "^3.0.1",
        "eslint-plugin-vue": "^10.4.0",
        "fkill": "^9.0.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.1.2",
        "open": "^10.2.0",
        "prettier": "^3.6.2",
        "stylelint": "^16.23.1",
        "stylelint-config-standard": "^39.0.0",
        "typescript-eslint": "^8.40.0",
        "yauzl": "^3.2.0"
    },
    "volta": {
        "node": "20.6.1"
    }
}
