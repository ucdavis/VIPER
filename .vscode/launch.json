{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to Chrome",
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "webRoot": "${workspaceFolder}/VueApp/src",
            "sourceMaps": true,
            "skipFiles": [
                "<node_internals>/**"
            ],
            "preLaunchTask": "ensureChromeDebugging"
        },
        {
            "name": ".NET Tests (Debug)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "dotnet",
            "args": ["test", "--no-build", "--verbosity", "normal"],
            "cwd": "${workspaceFolder}/test",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "Attach to .NET Core",
            "type": "coreclr",
            "request": "attach",
            "preLaunchTask": "findViperProcessToFile",
            "processId": "${input:viperProcessId}"
        }
    ],
    "inputs": [
        {
            "id": "viperProcessId",
            "type": "command",
            "command": "extension.commandvariable.file.content",
            "args": {
                "fileName": "${workspaceFolder}/.vscode/viper-pid.txt"
            }
        }
    ]
}
